set enc=utf-8
syntax off
set autoread
set number
set mouse=r
set autoindent
set paste
set splitright

set backupdir=~/.vim//
set directory=~/.vim//
set undodir=~/.vim//


set tabstop=4 softtabstop=0 noexpandtab shiftwidth=4
set ruler

noremap <Leader>y "*y
noremap <Leader>p "*p
noremap <Leader>Y "+y
noremap <Leader>P "+p
